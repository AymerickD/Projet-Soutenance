{% extends 'base.html.twig' %}

{% block title %}
Voici le paiement !
{% endblock %}

{% block body %}
<h1 class="text-center">Paiement !!!</h1>
<br><br>
<div class="text-center">
    <h2>MONTANT A PAYER :</h2>
    <h2> 120 €</h2>
</div>
<br><br>
<div class="row">
    <div class="col s12 m4 l4 offset-m4 offset-l4 text-center">
        <form id="payment-form" method="post">

            <div class="form-row" id="card-element">
                <label>
                    <span>Numéro carte</span>
                    <input data-stripe="number" size="16" type="text">
                </label>


                <label>
                    <span>Expire en (MM/YY)</span>
                    <input data-stripe="exp_month" size="2" type="text">
                </label>
                <span>
                    /
                </span>
                <input data-stripe="exp_year" size="4" type="text">

                <label>
                    <span>CVC</span>
                    <input data-stripe="cvc" size="3" type="text">
                </label>
            </div>
            <br><br>
            <button>Payer</button>
        </form>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="https://js.stripe.com/v3/" type="text/javascript"></script>

