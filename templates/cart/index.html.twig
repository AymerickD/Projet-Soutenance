{% extends 'base.html.twig' %}

{% block title %}Voici le panier !
{% endblock %}



{% block body %}
<div class="bg-light text-center p-3">
    <h1>Votre panier</h1>
</div>

{% if items | length > 0 %}

<table class="table">
    <thead>
        <tr>
            <th>Artwork name</th>
            <th>Prix</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
        <tr>
            <td> {{ item.artworks.title }} </td>
            <td> {{ item.artworks.price }} €</td>
            <td>
                <a href="{{ path('cart_remove', {'id':item.artworks.id}) }}" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="1">Total:</td>
            <td>{{ total }} €</td>
            <td><a href="{{ path('payment')}}" class="btn btn-success btn-sm">
                    Valider la commande
                </a></td>
        </tr>
    </tfoot>
</table>
{% else %}
<p>Surprise, c'est vide !</p>
{% endif %}

{% endblock %}